@model HotelMateWebV1.Models.ItemIndexModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-head">
    <h2>Product Alerts</h2>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Product</a></li>
        <li class="active">Product Alerts</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">



        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Products</h3>
                    <a class="btn btn-success hbtn" href="@Url.Action("Index","Pos")" id="todaySale">Back To POS</a>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>

                                    <th style="width:15%;"><strong>Name</strong></th>
                                    <th style="width:15%;"><strong>Qty</strong></th>
                                    <th style="width:15%;"><strong>Buying Price</strong></th>
                                    <th style="width:15%;"><strong>Selling Price</strong></th>
                                    <th style="width:15%;"><strong>Notification Number</strong></th>
                                    <th style="width:15%;"><strong>Remainder</strong></th>
                                    <th style="width:15%;" class="text-center"><strong>Action</strong></th>
                                    @*<th style="width:15%;"><strong>Date</strong></th>
                                        <th style="width:15%;"><strong>Progress</strong></th>
                                        <th style="width:15%;" class="text-center"><strong>Action</strong></th>*@
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.ItemList)
                                {
                                    <tr>

                                        <td>@item.StockItemName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.OrigPrice</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.NotNumber</td>
                                        <td>@item.Quantity</td>


                                        @*<td class="color-success"><div class="progress"><div class="progress-bar progress-bar-success" style="width: 40%">40%</div></div></td>*@
                                        <td class="text-center">
                                            <a class="label label-default" href="#">
                                                <i class="fa fa-pencil"></i>
                                            </a> <a class="label label-danger" href="#"><i class="fa fa-times"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

