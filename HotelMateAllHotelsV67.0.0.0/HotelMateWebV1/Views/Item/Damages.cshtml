@model HotelMateWebV1.Models.PurchaseOrderModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>


<div class="page-head">
    <h2>Items</h2>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Damaged Items</a></li>
        <li class="active">Record</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <div class="block-flat">
                <div class="header">
                    <h3>Record Damages</h3>
                    @if (Model.Saved.HasValue && Model.Saved.Value)
                    {
                        <div class="alert alert-success alert-white rounded">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <div class="icon"><i class="fa fa-check"></i></div>
                            <strong>Success!</strong>Damaged Items have been recorded successfully!
                        </div>
                       
                    }
                </div>
                <div class="content">

                    @using (Html.BeginForm("Damages", "Item", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                         @Html.HiddenFor(m => m.Id)
                         @Html.Partial("_DamagedItems")
                    }
                </div>
            </div>
        </div>
    </div>

</div>
