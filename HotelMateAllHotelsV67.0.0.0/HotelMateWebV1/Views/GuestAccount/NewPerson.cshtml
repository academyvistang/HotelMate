@model HotelMateWebV1.Models.PersonViewModel

  <script type="text/javascript">

        $(function () {
            $("#submitEdit").click(function () {
                if (confirm('Are you sure you want to delete this person ?')) {
                    return true;
                }
                else {
                    return false;
                }

            });
        });

    </script>


<section id="content" class=" eight columns">

    @if (Model.ItemSaved.HasValue && Model.ItemSaved.Value)
    {
        @Html.Partial("_EntityUpdated", "Person details updated.")
    }

    <h1 class="page-title ci-title"><span>Manage Users</span></h1>

    <article id="post-16" class="post-16 page type-page status-publish hentry entry group">

        <div class="booking-form-wrap bs bg">

            @using (Html.BeginForm("NewPerson", "GuestAccount", FormMethod.Post, new { enctype = "multipart/form-data", @class = "booking-form b-form row" }))
            {
                @Html.ValidationSummary()
                
                @Html.Partial("_PersonFull")
            }

        </div>

    </article>

</section>
<!-- #content -->
@section SideBarBox
    {
    @Html.Partial("_CheckAvailabilityNew")
    }


