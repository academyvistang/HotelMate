@model HotelMateWebV1.Models.CinemaModel

<link href="@Url.Content("~/Content/video-js.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/video-js-skins/hu.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/video-js-skins/tube.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/video-js-skins/vim.css")" rel="stylesheet" type="text/css" />


<!-- Begin VideoJS -->
<div class="video-js-box">
    <video class="video-js" width="100%" height="600" controls autoplay preload poster="@Model.PosterPath">
        @*<source src="@Url.Action("OceansClip", "Guest", new {id = Model.FilmId, @type = "mp4" })" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"' />*@
        <source src="@Url.Action("OceansClip", "Guest", new {id = Model.FilmId, @type = Model.MovieType })" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"' />
              
        <object class="vjs-flash-fallback" width="640" height="600" type="application/x-shockwave-flash" data="@Url.Content("~/Swf/flowplayer-3.2.7.swf")">
            <param name="movie" value="@Url.Content("~/Swf/flowplayer-3.2.7.swf")" />
            <param name="allowfullscreen" value="true" />
            @*<param name="flashvars" value='config={"playlist":["@Url.Content("~/Content/video/oceans-clip.jpg")", {"url": "@Url.Content("~/Content/videos/The.Theory.of.Everything.2014.720p.BluRay.x264.YIFY.mp4")","autoPlay":false,"autoBuffering":true}]}' />*@
            <!-- Image Fallback. Typically the same as the poster image. -->
            <img src="@Model.PosterPath" width="640" height="600" alt="Poster Image" title="No video playback capabilities." />
        </object>
    </video>
</div>
<!-- End VideoJS -->

<script src="@Url.Content("~/Scripts/video.js")" type="text/javascript"></script>
<script type="text/javascript">
    // Add VideoJS to all video tags on the page when the DOM is ready
    VideoJS.setupAllWhenReady();
</script>




