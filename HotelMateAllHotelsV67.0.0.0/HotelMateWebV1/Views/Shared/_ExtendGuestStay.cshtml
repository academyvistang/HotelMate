@model HotelMateWebV1.Models.GuestRoomAccountViewModel

@*<script src="~/DragnDrop/jquery-1.6.2.min.js"></script>
<script src="~/Scripts/HotelMotelDate.js"></script>*@


@Html.HiddenFor(x => x.Guest.Id)
@Html.HiddenFor(x => x.PaymentTypeId)



<div class="six columns">
    <label for="FullName">Name*</label>
    @Html.TextBoxFor(model => model.Guest.FullName)
    @Html.ValidationMessageFor(model => model.Guest.FullName)
</div>

<div class="six columns">
    <label for="email">E-Mail*</label>
    @Html.TextBoxFor(model => model.Guest.Email)
    @Html.ValidationMessageFor(model => model.Guest.Email)
</div>

<div class="six columns">
    <label for="arrive">Previous Checkout **</label>
    <input readonly type="text" id="arrive" class="datepicker" name="arrive" value="@Model.PreviousCheckOutDate.ToShortDateString()">
</div>

<div class="six columns">
    <label for="depart">New Check Out*</label>
    <input id="depart" class="datepicker" type="text" name="depart" value="@Model.NewCheckOutDate.ToShortDateString()">
    @Html.ValidationMessageFor(model => model.NewCheckOutDate)
</div>


<div class="twelve columns">
    <label for="b-room">Room</label>
    @Html.DropDownListFor(x => x.RoomId,
        new SelectList(Model.Rooms, "Id", "RoomNumber", Model.RoomId))
</div>

<div class="twelve columns">
    <label for="comments">NOTES</label>
    @Html.TextAreaFor(model => model.Guest.Notes, new { @cols = "30", @rows = "1" })
</div>

<div class="twelve columns">
    <input type="submit" value="Extend @Model.Guest.FullName Stay" name="send_booking">
</div>

