
@model HotelMateWebV1.Models.RoomBookingViewModel

<link href="~/css/CoolTable.css" rel="stylesheet" />


<div id="hero" class="row">
    <div class="eight columns">

        <div>
            <table class="striped fixedlayout">
                <thead>
                    <tr>
                        <th width="25%"></th>
                        <th width="25%">Room Number</th>
                        <th width="25%">Room Type</th>
                        <th width="25%">Rate </th>
                        <th width="25%">Business Rate </th>
                    </tr>
                </thead>
                <tbody id="CasesTableBody1">
                    @foreach (var rm in Model.RoomsList)
                    {
                        <tr id="@rm.Id">
                            <td class="tth2"><a class="erbEditorOpener buttonDevFirst" href="@Url.Action("NewBooking", "Booking", new { id = rm.Id })">Book Room  @rm.RoomNumber</a></td>
                            <td class="tth2">@rm.RoomNumber</td>
                            <td class="tth2">@rm.RoomType1.Name</td>
                            <td class="tth2">@rm.Price</td>
                            <td class="tth2">@rm.Price</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    @Html.Partial("_CheckAvailabilityFuture")
</div> <!-- #hero -->



<div class="row">
    <div class="twelve columns">
        <div class="twelve columns main-separator after-hero">
            <div class="home-slide-controls">
                <a class="slide-prev" href="">Previous Slide</a>
                <a class="slide-next" href="">Next Slide</a>
            </div>
        </div>
    </div>
</div>