@model HotelMateWebV1.Models.GuestRoomAccountViewModel


@Html.HiddenFor(x => x.GuestRoomAccount.Id)
@Html.HiddenFor(x => x.PaymentTypeId)


<div class="six columns">
    <label for="FullName">Name*</label>
    @Html.TextBoxFor(model => model.Guest.FullName)
    @Html.ValidationMessageFor(model => model.Guest.FullName)
</div>


<div class="six columns">
    <label for="discountedRate">Previous Amount</label>
    <input type="number" min="1" max="90000000" id="GuestRoomAccount.Amount" name="GuestRoomAccount.Amount" value="@Model.GuestRoomAccount.Amount">
</div>

<div class="six columns">
    <label for="discountedRate">Amended Amount</label>
    <input type="number" min="0" max="90000000" id="AdjustedAmount" name="AdjustedAmount" value="AdjustedAmount">
    @Html.ValidationMessageFor(model => model.AdjustedAmount)
</div>


<div class="twelve columns">
    <label for="comments">Reference No.</label>
    @Html.TextBoxFor(model => model.Notes)
</div>

@Html.Partial("_PaymentMethodSelector", new HotelMateWebV1.Models.RoomBookingViewModel { ShowDialog = true, PaymentMethodId = Model.PaymentMethodId, PaymentMethodNote = Model.PaymentMethodNote })


<div class="twelve columns">
    <input type="submit" value="Adjust @Model.Guest.FullName account" name="send_booking">
</div>


