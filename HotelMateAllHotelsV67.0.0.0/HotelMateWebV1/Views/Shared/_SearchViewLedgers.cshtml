@model HotelMateWebV1.Models.SearchViewModel
<link href="~/css/CoolTable.css" rel="stylesheet" />


<div class="eight columns">

    <h1 class="page-title ci-title" style="margin-bottom:10px;"><span>Guest Ledger</span></h1>

    
    <div>
        <table class="striped fixedlayout">
            <thead>
                <tr>
                    <th width="35%"></th>
                    <th width="15%">Name</th>
                    <th width="15%">Email</th>
                    <th width="15%">Telephone</th>
                    <th width="10%">Amount </th>
                </tr>
            </thead>
            <tbody id="CasesTableBody1">
                @foreach (var rm in Model.LedgerList)
                {
                    <tr id="@rm.Id">
                        <td class="tth2">
                            <a class="erbEditorOpener buttonDevFirst" href="@Url.Action("ClearLedger", "CompanyAccount", new { id = rm.Id })">Paid In Full</a>
                        </td>
                        <td class="tth2">@rm.Guest.FullName</td>
                        <td class="tth2">@rm.Email</td>
                        <td class="tth2">@rm.Telephone</td>
                        <td class="tth2">@rm.Amount</td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>










