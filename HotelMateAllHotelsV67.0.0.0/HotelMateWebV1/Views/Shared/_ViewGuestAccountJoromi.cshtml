@using System.Globalization
@using HotelMateWebV1.Helpers
@model HotelMateWebV1.Models.GuestRoomAccountViewModel

<link href="~/css/CoolTable.css" rel="stylesheet" />

<div class="twelve columns">
    <h1 class="page-title ci-title" style="margin-bottom:10px;"><span>Joromi Cinemas</span></h1>

    <h3><span style="color: #24D07C">Film List</span></h3>
    <div>
        <table class="striped fixedlayout">
            <thead>
                <tr>
                    <th width="20%">Year</th>
                    <th width="20%">Film</th>
                    <th width="30%">Starring</th>
                    <th width="20%">Genre</th>
                    <th width="10%"></th>
                </tr>
            </thead>
            <tbody id="CasesTableBody1">
                @foreach (var rm in Model.CinemaList)
                {
                     <tr id="@rm.Id">
                            <td class="tth2">@rm.Year</td>
                            <td class="tth2">@rm.FilmName</td>
                            <td class="tth2">@rm.Starring </td>
                            <td class="tth2">@rm.Genre</td>
                            <td class="tth2"><span style="padding-left:16px;"><a href="@Url.Action("PlayMovie","Guest")"><img src="~/images/icon_play.png" /></a></span></td>
                        </tr>
                   
                }

              
            </tbody>

        </table>

    </div>

</div>













