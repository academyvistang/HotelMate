@model HotelMateWebV1.Models.NonAccountViewModel



@Html.HiddenFor(x => x.GuestId)


<div class="six columns">
    <label for="GuestName">Name</label>
    <input type="text"  id="GuestName" name="GuestName" value="@Model.GuestName" placeholder="Name">
</div>

<div class="six columns">
    <label for="discountedRate">Quantity</label>
    <input type="number" min="1" max="90000000" id="Quantity" name="Quantity" value="@Model.Quantity">
</div>

<div class="six columns">
    <label for="b-room">Item</label>
    @Html.DropDownListFor(x => x.ItemId,
            new SelectList(Model.ItemList, "Id", "Name", Model.ItemId))
</div>

<div class="six columns">
    <label for="Tax">Tax</label>
    <input type="number" min="0" max="100" id="Tax" name="Tax" value="@Model.Tax">
</div>


@Html.Partial("_PaymentMethodSelectorFO", new HotelMateWebV1.Models.RoomBookingViewModel { ShowDialog = true })



<div class="twelve columns">
    <input type="submit" value="Pay" name="send_booking">
</div>

