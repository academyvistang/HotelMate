@model HotelMateWebV1.Models.SoldItemIndexModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>

<div class="page-head">
    <h2>Sold Items</h2>
    <a style="float:right;" class="btn btn-success hbtn" href="@Url.Action("Index","Pos")" id="todaySale">Back To POS</a>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Sold Items</a></li>
        <li class="active">Today's Sales</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">



        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Today's Sales</h3>

                    @Html.Partial("_DateSelector", "Sales")

                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>

                                    <th style="width:15%;"><strong>Name</strong></th>
                                    <th style="width:15%;"><strong>Qty</strong></th>
                                    <th style="width:15%;"><strong>Buying Price</strong></th>
                                    <th style="width:15%;"><strong>Selling Price</strong></th>
                                    <th style="width:15%;"><strong>Notification Number</strong></th>
                                    <th style="width:15%;"><strong>Barcode</strong></th>

                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.ItemList)
                                {
                                    <tr>

                                        <td>@item.Description</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.Remainder</td>
                                        <td>@item.CategoryName</td>

                                    </tr>
                                }

                                <tr>
                                    <td colspan="3"></td>
                                    <td>@Model.ItemList.Sum(x => x.TotalPrice)</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

