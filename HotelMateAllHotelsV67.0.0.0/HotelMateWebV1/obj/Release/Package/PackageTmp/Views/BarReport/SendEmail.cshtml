@model HotelMateWebV1.Models.ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>

<div class="page-head">
    <h2>BarMate</h2>
    <a style="float:right;" class="btn btn-success hbtn" href="@Url.Action("Index","Home")" id="todaySale">Go Back</a>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Reports</a></li>
        <li class="active">Send Email</li>
    </ol>
</div>



<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            @if (Model.ItemSaved.HasValue && Model.ItemSaved.Value)
            {
                @Html.Partial("_EntityUpdated", "Email has now been sent.")
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Send Email</h3>
                    @Html.Partial("_DateSelector", "SendEmail")
                </div>
            </div>
        </div>
    </div>
</div>

