@model HotelMateWebV1.Models.ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>

<div class="page-head">
    <h2>BarMate</h2>
    <a style="float:right;" class="btn btn-success hbtn" href="@Url.Action("Index","Home")" id="todaySale">Go Back</a>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Reports</a></li>
        <li class="active">Inventory Reports</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Inventory Reports</h3>
                    @Html.Partial("_DateSelector", "Inventory")
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:15%;"><strong>Date</strong></th>
                                    <th style="width:25%;"><strong>Description</strong></th>
                                    <th style="width:20%;"><strong>Supplier Invoice</strong></th>
                                    <th style="width:20%;"><strong>No. Of Items</strong></th>
                                    <th style="width:20%;"><strong>Net (NGN)</strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.InventoryList)
                                {

                                    <tr>
                                        <td>@item.OrderDate</td>
                                        <td>@item.Description</td>
                                        <td>@item.SupplierInvoice</td>
                                        <td>@item.PurchaseOrderItems.Count</td>
                                        <td>@item.NetValue</td>
                                    </tr>
                                }

                                <tr>
                                    <td colspan="4">Total</td>
                                    <td>@Model.InventoryList.Sum(x => x.NetValue)</td>
                                </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

