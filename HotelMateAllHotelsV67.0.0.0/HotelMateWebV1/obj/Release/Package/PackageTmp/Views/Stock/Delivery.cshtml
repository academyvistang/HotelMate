@model HotelMateWebV1.Models.ItemIndexModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-head">
    <h2>Delivery Items</h2>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Delivery</a></li>
        <li class="active">Items List</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Delivery Items</h3><span>@Html.ActionLink("Create New", "Create")</span>
                </div>
                <div class="content">
                    <div class="table-responsive">

                        @using (Html.BeginForm("Delivery", "Stock", FormMethod.Post, new { @class = "form-horizontal" }))
                        {

                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>

                                    <th style="width:15%;"><strong>Name</strong></th>
                                    <th style="width:15%;"><strong>Qty Received</strong></th>
                            </thead>
                            <tbody class="no-border-y">
                               
                                @foreach (var item in Model.HotelItemsList.OrderBy(x => x.Name))
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@Html.TextBox("HotelItem_" + item.Id.ToString(), 0, new { @type = "number" })</td>
                                    </tr>
                                }

                            </tbody>
                        </table>


                        <div class="row">
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </div>
                        </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

