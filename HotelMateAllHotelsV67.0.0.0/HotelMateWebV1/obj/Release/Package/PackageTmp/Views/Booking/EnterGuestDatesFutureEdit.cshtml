@model HotelMateWebV1.Models.GroupBookingViewModel

@{
    ViewBag.Title = "Booking";
}

<section id="content" class=" eight columns">
    @if (Model.ItemSaved.HasValue && Model.ItemSaved.Value)
    { @Html.Partial("_EntityUpdated", "Reservation details have been updated.")  }
    <h1 class="page-title ci-title"><span>Future Reservation</span></h1>

    <article id="post-16" class="post-16 page type-page status-publish hentry entry group">

        <div class="booking-form-wrap bs bg">

            @using (Html.BeginForm("EditFutureBooking", "Booking", FormMethod.Post, new { enctype = "multipart/form-data", @class = "booking-form b-form row" }))
            {
                @Html.HiddenFor(model => model.selectedRoomIds)
                @Html.HiddenFor(model => model.CheckinDate)
                @Html.HiddenFor(model => model.CheckoutDate)
                @Html.HiddenFor(model => model.GuestId)
                @Html.Partial("_RoomsDisplayGuestDatesEdit")
            }

        </div>

    </article>

</section>


@section SideBarBox
{
    @Html.Partial("_CheckAvailabilityNew")
}





