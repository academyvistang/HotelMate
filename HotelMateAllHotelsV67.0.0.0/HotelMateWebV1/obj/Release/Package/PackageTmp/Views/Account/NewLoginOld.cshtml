<div class="twelve  columns">
    <form method="post" class="signin" action="@Url.Action("LogOn","Account")">


        <div class="=row">
            <div class="four columns" style="display:none;">
                <label class="username">
                    <span>Username or email</span>
                    <input id="UserName" disabled="disabled" name="UserName" value="" type="text" autocomplete="on" placeholder="GUEST">
                </label>

            </div>
            <div class="four columns" style="display:none;">
                <label class="password">
                    <span>Password</span>
                    <input id="Password" disabled="disabled" name="Password" value="" type="password" placeholder="GUEST">
                </label>

            </div>

            <div class="four columns">
                <br />
                <input class="submit button" type="submit" value="Sign in" />
            </div>

            
        </div>


    </form>
</div>

