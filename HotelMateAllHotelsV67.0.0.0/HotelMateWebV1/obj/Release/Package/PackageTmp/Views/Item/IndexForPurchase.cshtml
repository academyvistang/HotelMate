@model HotelMateWebV1.Models.ItemIndexModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-head">
    <h2>Items</h2>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Stock Order</a></li>
        <li class="active">Stock Orders List</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:15%;"><strong>Order Date</strong></th>
                                    <th style="width:15%;"><strong>Description</strong></th>
                                    <th style="width:10%;"><strong>Value</strong></th>
                                    <th style="width:15%;"><strong>Store</strong></th>
                                    <th style="width:15%;"><strong>Assigned To</strong></th>
                                    <th style="width:15%;"><strong></strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.POItemList)
                                {
                                    <tr>
                                        <td>@item.OrderDate</td>
                                        <td>@item.Description</td>
                                        <td>@item.NetValue</td>
                                        <td>@item.Store1.Name</td>                                        
                                        <td>@item.Person.DisplayName</td>
                                        <td class="text-center">

                                            @if(!item.InvoiceRaised)
                                            {
                                                <a class="label label-default" href="@Url.Action("ReassignToStoreManager", "Item", new { id = item.Id })">
                                                <i class="fa fa-pencil">Purchase & Reassign</i>
                                                </a>                                                
                                            }
                                            else
                                            {
                                                <a class="label label-default" href="@Url.Action("POView", "Item", new {id = item.Id })">
                                                <i class="fa fa-video-camera"></i>
                                                </a>
                                            }
                                            
                                            

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
