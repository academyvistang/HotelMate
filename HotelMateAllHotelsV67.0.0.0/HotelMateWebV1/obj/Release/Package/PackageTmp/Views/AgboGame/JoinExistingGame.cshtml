@model HotelMateWebV1.Models.GameViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script> 
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#continue_button").click(function (e) {
            var ddlVal = $("#GameType").val();
            if (ddlVal == 0) {
                alert("Please select the type of game you want to play");
                return false;
            }
            else if (ddlVal == 1) {
                var r = confirm("You have choosen to play 21, Is this correct")
                if (r == true) {
                    return true;
                }
                else {
                    return false;
                }
            }
            else {
                var r = confirm("You have choosen to play Aggara, Is this correct")
                if (r == true) {
                    return true;
                }
                else {
                    return false;
                }
            }
        });
    });
</script>

