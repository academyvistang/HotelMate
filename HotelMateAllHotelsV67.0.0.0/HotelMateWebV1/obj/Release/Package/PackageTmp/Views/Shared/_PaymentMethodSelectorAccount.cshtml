@model HotelMateWebV1.Models.GuestRoomAccountViewModel



@{string strDisplayIniDep = ""; }
<div class="twelve columns"></div>

<div style="@strDisplayIniDep" id="ShowPaymentMethod">

    <div class="six columns">
        <label for="comments">Payment Method</label>
        <br />
        @Html.DropDownListFor(model => model.PaymentMethodId, Model.PaymentMethods)
    </div>
    <div class="six columns">
        <label for="comments">(if Cheque) Cheque No.</label>
        <br />
        @Html.TextBoxFor(model => model.PaymentMethodNote)
    </div>

</div>
