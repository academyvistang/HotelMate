@using HotelMateWebV1.Helpers
@model HotelMateWebV1.Models.RoomTypeViewModel

<style>
    .dropdownDiv {
        height: 100px;
        width: 100%;
        overflow: auto;
        padding: 2px;
    }
</style>

@Html.HiddenFor(model => model.HotelId)
@Html.HiddenFor(model => model.IsActive)
@Html.HiddenFor(model => model.Id)

<div class="twelve columns">
    <label for="Name">Name</label>
    @Html.TextBoxFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="twelve columns">
    <label for="Description">Description</label>
    @Html.TextAreaFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</div>




<div class="six columns">
    <input id="submit" type="submit" value="Save" name="send_booking">
</div>

@if (Model.Id > 0)
{
    <div class="six columns">
        <input type="submit" value="Delete Room Type" name="send_booking">
    </div>
}









