@model HotelMateWeb.Dal.DataCore.Adventure


<div class="row">
    <div class="four columns">
        <a href="#"> <img src="~/Products/@Model.PicturePath" alt="image" height="300" width="300" /> </a>
    </div>
    <div class="eight columns">

        <div class="row">
            <div class="four columns">
                <label for="email">Name</label>
            </div>
            <div class="four columns">
                <label for="email">@Model.Name</label>
            </div>
        </div>

        <div class="row">
            <div class="four columns">
                <label for="email">Description</label>
            </div>
            <div class="four columns">
                <label for="email">@Model.Description</label>
            </div>
        </div>

        <br />




        @if (!Model.IsPlaceOfInterest)
        {
            <div class="row">
                <div class="four columns">
                    <label for="email">Buy Card</label>
                </div>
                <div class="four columns">
                    <a class="erbEditorOpener buttonDevFirst" href="@Url.Action("BuyCard", "Guest", new {id = Model.Id })">Buy Recharge Card</a>
                </div>
            </div>

        }
    </div>
</div>

<hr />
